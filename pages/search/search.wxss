.search-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.search-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
}

/* 搜索栏区域 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: rgb(17, 17, 17);
  border-radius: 60rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.search-bar input {
  border-radius: 20rpx;
  flex: 1;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.search-bar .iconfont {
  margin-top: -20rpx;
  font-size: 30rpx;
}

.search-bar .icon-sousuo2 {
  color: blue;
}

.search-bar .place-holder {
  font-size: 22rpx;
  /* font-weight: 700; */
}

/* 历史搜索区域 */
.history {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  margin: 40rpx 0;
}

.history icon {
  margin-top: -20rpx;
}

.history-scroll {
  width: 85%;
  height: 50rpx;
  display: flex;
  white-space: nowrap;
}

.history-scroll .history-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: rgb(37, 37, 37);
  border-radius: 40rpx;
  margin-right: 16rpx; 
  font-size: 22rpx;
}

/* 搜索数据显示区域 */
.search-result {
  width: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-weight: 700;
  overflow: hidden;
  text-overflow: hidden;
  white-space: nowrap;
}

.search-result .search-item {
  width: 100%;
  margin: 16rpx 0;
  font-size: 26rpx;
}

/* 推荐歌曲类别区域 */
.music-type {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.music-type .type-item {
  position: relative;
  width: 48%;
  height: 200rpx;
  /* background: linear-gradient(60deg, blue,  #1E1F1F, #1E1F1F, #1E1F1F,  #1E1F1F); */
  background: radial-gradient(#1A1A1A 40%, #1E1F1F 60%);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}

.type-item .cover {
  position: absolute;
  bottom: -60rpx;
  right: -60rpx;
  width: 160rpx;
  height: 160rpx;
  object-fit: cover;
}

.type-item .type {
  color: #fff;
  font-size: 32rpx;
  font-weight: bolder;
}

.type-item .ch-type {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  background-color: #000;
}

/* 热门搜索区域 */
.hot-search {
  width: 100%;
  display: flex;
  flex-wrap: wrap; 
  margin: 40rpx 0;
}

.hot-search .hot-item {
  display: flex;
  align-items: center;
  font-weight: 700;
  color: #fff;
  font-size: 22rpx;
  background-color: rgb(37, 37, 37);
  border-radius: 40rpx;
  padding: 14rpx 24rpx;
  box-sizing: border-box;
  margin: 10rpx;
}

.hot-search image {
  width: 30rpx;
  height: 30rpx;
  object-fit: cover;
  margin-right: 6rpx;
}

