.icon-zuojiantou- {
  color: #fff;
  font-weight: 700;
  font-size: 50rpx;
  position: relative;
}

.login-box {
  margin-top: 200rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  color: #fff;
  font-weight: 700;
}

.input-item {
  position: relative;
  display: flex;
  margin: 0 auto;
  align-items: center;
  width: 100%;
  height: 90rpx;
  /* border-bottom: 1px solid #5B5C5C; */
  background-color: #1E1F1F;
  border-radius: 100rpx;
  margin-bottom: 40rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 60rpx;
}

.input-item label {
  font-size: 28rpx;
  color: #fff;
  font-weight: 700;
  margin-right: 40rpx;
}

.input-item input {
  color: #fff;
  font-weight: 700;
  font-size: 32rpx;
}

.input-item .place-holder {
  font-size: 28rpx;
  color: #5B5C5C;
  font-weight: 500;
}

.login-box button {
  width: 100rpx;
  background-color: #5B5C5C;
  border-radius: 40rpx;
  margin-top: 120rpx;
}

.icon-youjiantou- {
  font-size: 40rpx;
  color: #000;
  font-weight: 700;
}







