/* 自定义导航区域 */
.navigation .iconfont {
  color: #fff;
  font-size: 50rpx;
  font-weight: 700;
}

.song-detail-container {
  position: relative;
}

.bg {
  width: 100%;
  height: 100vh;
  filter: blur(160rpx) brightness(100%) opacity(1);
}

/* 歌曲详情区域 */
.song-detail {
  position: absolute;
  top: 13vh;
  left: 0;
  width: 100vw;
  padding: 0 80rpx;
  box-sizing: border-box;
  color: #fff;
  font-weight: 700;
}

/* 歌曲封面 */
.song-detail .cover {
  width: 100%;
  height: calc(100vw - 160rpx);
  object-fit: cover;
  border-radius: 30rpx;
}

/* 歌曲信息 */
.song-name, .singer {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.song-name text, .singer text {
  width: 88%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-name text {  
  font-size: 36rpx; 
}

.song-name icon, .singer icon {
  font-size: 40rpx;
  color: #ccc;
}

.singer text {
  font-size: 30rpx;
  color: #ccc;
  margin-top: -20rpx;
}

/* 歌词 */
.song-detail .lyric {
  height: 120rpx;
  width: 100%;
  /* background-color: red; */
}

/* 播放进度条 */
.progress-bar {
  width: 100%;
  margin: 30rpx 0;
  /* background-color: #ccc; */
}

.progress-bar .time {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  font-weight: 900;
  margin-bottom: 10rpx;
}


.main-progress {
  position: relative;
  width: 100%;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
}

.current-progress {
  position: absolute;
  left: 0;
  top: 0;
  height: 6rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 6rpx #fff, 0 0 12rpx #fff;
}

.audio-cricle {
  position: absolute;
  right: -16rpx;
  top: -5rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 6rpx #fff, 0 0 12rpx #fff, 0 0 18rpx #fff;
}








/* 歌曲控制栏 */
.song-detail .control {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control icon {
  font-size: 50rpx;
}

.control .icon-suijibofang, .control .icon-xiazai1 {
  color: #ccc;
  font-size: 34rpx;
}

.control .icon-icon_play, .control .icon-zanting {
  background: rgba(255, 255, 255, .2);
  padding: 20rpx;
  border-radius: 50%;
}







