/* 自定义导航栏 */
.navbar-title {
  color: #fff;
}
/* 新碟上架区域 */
.new-album {
  height: 500rpx;
  display: flex;
  margin-bottom: 32rpx;
  margin-top: 200rpx;
}

.new-album .album-item{
  width: 500rpx;
  height: 500rpx;
  position: relative;
  margin-right: 40rpx;
}

.new-album  image {
  width: 500rpx;
  height: 500rpx;
  object-fit: cover;
  border-radius: 28rpx;
}

.new-album .desc {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0 0 28rpx 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: linear-gradient(0deg, blue, transparent);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-album .desc text {
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  font-weight: 700;
}


/* 精选歌单区域 */
.scroll-playlist {
  height: 380rpx;
  display: flex;
}

.scroll-playlist image {
  width: 260rpx;
  height: 260rpx;
  object-fit: cover;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.scroll-playlist text {
  width: 260rpx;
  color: #fff;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


/* 推荐专辑区域 */
.re-album-swiper {
  height: 400rpx;
}

.re-album-item {
  position: relative;
  width: 97%;
  height: 360rpx;
  background-color: rgb(30, 31, 31);
  border-radius: 20rpx;
  margin: 40rpx 40rpx 40rpx 0;
}

.re-album-item image {
  width: 260rpx;
  height: 260rpx;
  object-fit: cover;
}

.re-album-item text {
  width: 160rpx;
  position: absolute; 
  right: 40rpx;
  font-weight: 900;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.re-album-item .name {
  top: 40rpx;
  font-size: 24rpx;
  color: #fff;
}

.re-album-item .artist {
  top: 120rpx;
  font-size: 20rpx;
  color: #ccc;
}

.re-album-item .cover {
  position: absolute;
  top: -40rpx;
  left: 40rpx;
  border-radius: 20rpx;
}

.re-album-item .record {
  position: absolute;
  top: -40rpx;
  left: 140rpx;
  width: 240rpx;
}

.re-album-item .desc {
  width: 90%;
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  font-size: 24rpx;
  color: #fff;
}




