/* 顶部歌手信息 */
.top-desc {

}

.top-desc .top-bg {
  position: relative;
  width: 100vw;
  height: 60vw;
}

.top-desc .top-bg image {
  object-fit: cover;
  border-radius: 50%;
}

.top-bg .cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 60vw;
  height: 60vw;

}

.top-bg .cover1 {
  position: absolute;
  top: 5vw;
  left: 20vw;
  width: 50vw;
  height: 50vw;
  opacity: 0.8;
}

.top-bg .cover2 {
  position: absolute;
  top: 10vw;
  left: 40vw;
  width: 40vw;
  height: 40vw;
  opacity: 0.6;
}

.top-bg .cover3 {
  position: absolute;
  top: 15vw;
  left: 60vw;
  width: 30vw;
  height: 30vw;
  opacity: 0.4;
}

.top-bg .cover4 {
  position: absolute;
  top: 20vw;
  left: 80vw;
  width: 20vw;
  height: 20vw;
  opacity: 0.2;
}

.top-bg .name {
  position: absolute;
  left: 50%; 
  bottom: 0;
  width: 45vw;
  text-align: right;
  font-size: 60rpx;
  font-weight: 700;
  color: #fff;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

/* 歌手详细信息 */
.singer {
  width: 100%;
  background-color: #1E1F1F;
  height: calc(100vh - 60vw);
  margin-top: 40rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.singer .nav {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.singer .nav text {
  width: 50%;
  text-align: center;
  color: #fff;
  font-weight: 700;
}

.singer .nav .active {
  border-bottom: 4rpx solid rgb(69, 69, 70);
}

.singer .detail-swiper {
  height: calc(100vh - 60vw - 150rpx);
}
.singer .singer-desc {
  font-size: 24rpx;
  color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
  height: 100%;
  text-indent: 2em;
  line-height: 46rpx;
}

.singer .portfolio .singer-songs {
  height: calc(100vh - 60vw - 150rpx);
}

.singer swiper {
  padding-top: 40rpx; 
}

