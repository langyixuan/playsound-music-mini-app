.nav {
  margin-bottom: 40rpx;
}

.nav-position {
  position: fixed;
  z-index:999;
}

.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 100;
}

.nav-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.nav-box .navbar {
  width: 100%;
  padding: 0 40rpx;
  position: absolute;
  box-sizing: border-box;
}