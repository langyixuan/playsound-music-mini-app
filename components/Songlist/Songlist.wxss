@import '/static/iconfont/iconfont.wxss';
.songlist-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.song-item {
  width: 100%;
  display: flex;
  position: relative;
  align-items: center;
  color: #fff;
  font-weight: 700;
  margin-bottom: 30rpx;
}

.song-item .cover {
  width: 80rpx;
  height: 80rpx;
  object-fit: cover;
  border-radius: 10rpx;
  margin-right: 40rpx;
}

.song-item .desc {
  width: 460rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc .name {
  font-size: 26rpx;
}

.desc .singer {
  font-size: 22rpx;
  color: #ccc;
}

.song-item .iconfont {
  width: 50rpx;
  text-align: right;
  position: absolute;
  right: 0;
  color: #ccc;
}
