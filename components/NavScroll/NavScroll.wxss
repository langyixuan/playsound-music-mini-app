@import '/static/iconfont/iconfont.wxss';

.nav-scroll {
  display: flex;
  white-space: nowrap;
  color: #fff;
  height: 100rpx;
}

.nav-list {
  height: 100rpx;
}

.icon-search {
  font-size: 50rpx;
  line-height: 100rpx;
  margin-right: 20rpx;
  transform: translateY(10rpx);
}

.nav-item {
  font-size: 24rpx;
  margin-right: 20rpx;
  line-height: 100rpx;
  font-weight: 700;
  padding: 10rpx 14rpx;
}

.nav-list .active {
  background-color: rgb(40, 40, 226);
  border-radius: 50rpx;
}
